<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_repair_order_form" model="ir.ui.view">
        <field name="model">repair.order</field>
        <field name="inherit_id" ref="repair.view_repair_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='location_id']" position="attributes">
                <attribute name="attrs">{'invisible': [('repair_type', '=', 'vehicle_repair')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='lot_id']" position="attributes">
                <attribute name="attrs">{'required': [('tracking', '!=', 'none')], 'readonly': [('state', '=', 'done')], 'invisible': [('repair_type', '=', 'vehicle_repair')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='product_id']" position="attributes">
                <attribute name="attrs">{'invisible': [('repair_type', '=', 'vehicle_repair')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='product_uom']" position="attributes">
                <attribute name="attrs">{'invisible': [('repair_type', '=', 'vehicle_repair')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='product_qty']" position="attributes">
                <attribute name="attrs">{'invisible': [('repair_type', '=', 'vehicle_repair')]}</attribute>
            </xpath>
            <xpath expr="//label[@for='product_qty']" position="attributes">
                <attribute name="attrs">{'invisible': [('repair_type', '=', 'vehicle_repair')]}</attribute>
            </xpath>
            <xpath expr="//h1" position="after">
                <field name="repair_type" widget="radio" class="oe_edit_only" options="{'horizontal': true}"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="vehicle_id" attrs="{'required': [('repair_type', '=', 'vehicle_repair')]}"/>
            </xpath>
        </field>
    </record>
</odoo>
